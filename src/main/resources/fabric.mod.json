{
  "schemaVersion": 1,
  "id": "verdant_villagers",
  "version": "${version}",

  "name": "Verdant Villagers",
  "description": "This mod makes villages come alive. Watch the villagers gather resources, craft tools and blocks, and build new structures and roads on their own or help them with it.",
  "authors": [
    "Cosmic Terror Turtle"
  ],
  "contact": {
    "sources": "https://github.com/CosmicTerrorTurtle/Verdant-Villagers"
  },

  "license": "MIT License",
  "icon": "assets/verdant_villagers/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.cosmic_terror_turtle.verdant_villagers.VerdantVillagers"
    ],
    "client": [
      "io.github.cosmic_terror_turtle.verdant_villagers.VerdantVillagersClient"
    ]
  },
  "mixins": [
    "verdant_villagers.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
